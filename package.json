{
  "name": "game_of_thrones-names",
  "version": "0.0.0-development",
  "description": "Get random Game of Throne names of all the actors and actress",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "watch:test": "mocha --watch",
    "lint": "eslint src",
    "validate": "npm-run-all --parallel test lint build",
    "release": "semantic-release pre && npm publish && semantic-release post",
    "cover": "nyc --reporter=lcov npm t",
    "commit": "git cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nerdeveloper/game_of_thrones-names.git"
  },
  "keywords": [
    "random",
    "game of thrones"
  ],
  "files": [
    "dist"
  ],
  "author": "Obinna Odirionye <odirionye@gmail.com> (http://iamobinna.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nerdeveloper/game_of_thrones-names/issues"
  },
  "homepage": "https://github.com/nerdeveloper/game_of_thrones-names#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.11.4",
    "babel-loader": "6.2.4",
    "babel-plugin-istanbul": "1.0.3",
    "babel-preset-es2015": "6.9.0",
    "babel-register": "6.11.6",
    "chai": "3.5.0",
    "codecov": "3.0.0",
    "commitizen": "2.9.6",
    "cross-env": "2.0.0",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "3.2.0",
    "eslint-config-kentcdodds": "^9.0.0",
    "ghooks": "1.3.2",
    "json-loader": "0.5.4",
    "mocha": "3.0.0",
    "npm-run-all": "2.3.0",
    "nyc": "7.1.0",
    "rimraf": "2.5.4",
    "semantic-release": "8.2.0",
    "validate-commit-msg": "2.14.0",
    "webpack": "3.8.1"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "branches": 100,
    "function": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src"
    ],
    "sourceMap": false,
    "instrument": false,
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run validate",
      "commit-msg": "validate-commit-msg"
    }
  }
}
